<%= form_with url: "rakuten_search", method: (:get), local: true do |f| %>
  <%= f.label :keyword, "キーワード検索" %>
  <%= f.text_field :keyword %>
  <%= f.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody>
    <% if @items.present? %>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item['smallImageUrls'][0] %></td>
          <td><%= link_to item.name, "#{item.url}" %></td>
          <td align="right"><%= number_with_delimiter(item.price) %>円</td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>